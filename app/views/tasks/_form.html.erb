<div data-controller="modal" id="new_task_modal" class="fixed top-0 left-0 w-full h-full flex items-center justify-center bg-gray-800 bg-opacity-50 invisible" style="z-index: 1000;">
  <div class="bg-white rounded p-6 m-4 max-w-xs mx-auto">
    <h1 class="text-xl font-semibold">Create New Task</h1>

    <%= turbo_frame_tag dom_id(task) do %>
      <%= form_with(model: task) do |form| %>

        <% if task.errors.any? %>
          <div class="bg-red-500 text-white p-3 mb-4 rounded">
            <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
            <ul>
              <% task.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-4">
          <%= form.label :title, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= form.text_field :title, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
        </div>

        <div class="mb-6">
          <%= form.label :description, class: "block text-gray-700 text-sm font-bold mb-2" %>
          <%= form.text_area :description, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight" %>
        </div>

        <div class="flex items-center justify-between">
          <%= form.submit "Update Task", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      <% end %>
    <% end %>

    <button data-action="modal#close" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mt-4">Close</button>
  </div>
</div>

